<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/preload"
    tools:context="com.veinat.calculated.Fragment.Fragment1_MenuConverter"
    tools:ignore="autofill, LabelFor, ButtonStyle, RtlCompat, HardCodedText, NestedWeights, ContentDescription">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_temp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/krasiva"
            app:titleTextColor="#fff" />
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <EditText
            android:id="@+id/input2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:textSize="18sp"
            android:textColor="#fff"
            android:layout_weight="1"
            android:inputType="none"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:maxLength="13"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="#fff"
                android:theme="@style/spinnerTheme"
                android:popupBackground="@drawable/popup"
                android:popupElevation="0dp"
                android:layout_weight="1"
                android:id="@+id/spinConversionSelection"
                android:entries="@array/numb"
                />
        </LinearLayout>

        <View
            android:id="@+id/linedec"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:cursorVisible="false"
                android:id="@+id/viewDecimal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="7"
                android:background="@null"
                android:gravity="center"
                android:inputType="none"
                android:text="DEC:"
                android:textColor="#FFF"
                android:focusable="false"
                android:focusableInTouchMode="false"/>
            <EditText
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:cursorVisible="false"
                android:id="@+id/textDecimal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:textColor="#FFF"
                android:layout_weight="1"
                android:inputType="none"
                android:gravity="center_vertical"
                android:textSize="16sp"/>
        </LinearLayout>

        <View
            android:id="@+id/linebin"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:cursorVisible="false"
                android:id="@+id/viewBinary"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:textColor="#FFF"
                android:text="BIN:"
                android:layout_weight="7"
                android:inputType="none"
                android:gravity="center"
                android:focusable="false"
                android:focusableInTouchMode="false"/>
            <EditText
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:id="@+id/textBinary"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:textColor="#FFF"
                android:layout_weight="1"
                android:inputType="none"
                android:gravity="center_vertical"
                android:textSize="16sp"/>
        </LinearLayout>

        <View
            android:id="@+id/lineoct"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:cursorVisible="false"
                android:id="@+id/viewOctal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:textColor="#FFF"
                android:text="OCT:"
                android:layout_weight="7"
                android:inputType="none"
                android:gravity="center|center_vertical"
                android:focusable="false"
                android:focusableInTouchMode="false"/>
            <EditText
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:id="@+id/textOctal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:textColor="#FFF"
                android:layout_weight="1"
                android:inputType="none"
                android:gravity="center_vertical"
                android:textSize="16sp"/>
        </LinearLayout>

        <View
            android:id="@+id/linehex"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:cursorVisible="false"
                android:id="@+id/viewHexa"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:textColor="#FFF"
                android:text="HEX:"
                android:layout_weight="7"
                android:inputType="none"
                android:gravity="center|center_vertical"
                android:focusable="false"
                android:focusableInTouchMode="false"/>
        <EditText
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:id="@+id/textHexa"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:textColor="#FFF"
            android:layout_weight="1"
            android:inputType="none"
            android:gravity="center_vertical"
            android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">


            <Button
                android:id="@+id/backSpace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/butnum"
                android:text="@string/backspace"
                android:textSize="24sp"
                android:textColor="#FFF"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                />
            <ImageButton
                android:id="@+id/calculate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/but"
                android:text="="
                android:textColor="#FFF"
                android:textSize="24sp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/icon_equal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/preload"
                android:text="7"
                android:textSize="24sp"
                android:textColor="#FFF"/>

            <Button
                android:id="@+id/num8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/preload"
                android:textColor="#FFF"
                android:text="8"
                android:textSize="24sp"/>

            <Button
                android:id="@+id/num9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/preload"
                android:textColor="#FFF"
                android:text="9"
                android:textSize="24sp"/>
            <Button
                android:id="@+id/numf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/preload"
                android:textColor="#FFF"
                android:text="F"
                android:textSize="24sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/preload"
                android:textColor="#FFF"
                android:text="4"
                android:textSize="24sp"/>

            <Button
                android:id="@+id/num5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/preload"
                android:textColor="#FFF"
                android:text="5"
                android:textSize="24sp"/>

            <Button
                android:id="@+id/num6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/preload"
                android:text="6"
                android:textColor="#FFF"
                android:textSize="24sp"/>
            <Button
                android:id="@+id/nume"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/preload"
                android:textColor="#FFF"
                android:text="E"
                android:textSize="24sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/preload"
                android:textColor="#FFF"
                android:text="1"
                android:textSize="24sp"/>

            <Button
                android:id="@+id/num2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/preload"
                android:textColor="#FFF"
                android:text="2"
                android:textSize="24sp"/>

            <Button
                android:id="@+id/num3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/preload"
                android:textColor="#FFF"
                android:text="3"
                android:textSize="24sp"/>
            <Button
                android:id="@+id/numd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/preload"
                android:textColor="#FFF"
                android:text="D"
                android:textSize="24sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/num0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/preload"
                android:text="0"
                android:textColor="#FFF"
                android:textSize="24sp"/>
            <Button
                android:id="@+id/numa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/preload"
                android:text="A"
                android:textColor="#FFF"
                android:textSize="24sp"/>
            <Button
                android:id="@+id/numb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/preload"
                android:text="B"
                android:textColor="#FFF"
                android:textSize="24sp"/>
            <Button
                android:id="@+id/numc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/preload"
                android:text="C"
                android:textColor="#FFF"
                android:textSize="24sp"/>




        </LinearLayout>
    </LinearLayout>

</LinearLayout>